<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hall_lay_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:id="@+id/hall_lay_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/iv_head">

        <android.support.v4.view.ViewPager
            android:id="@+id/content_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"></android.support.v4.view.ViewPager>

        <me.chunsheng.wolf.hall.PagerSlidingTabStrip
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/colorOrigin"
            android:fillViewport="false"
            android:paddingTop="0dp"></me.chunsheng.wolf.hall.PagerSlidingTabStrip>

    </FrameLayout>

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorOrigin"
        android:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/iv_setting"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@id/iv_head"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/iv_head"
        android:layout_marginRight="10dp"
        android:background="@color/colorOrigin"
        android:src="@drawable/me_setting_icon" />

    <ImageView
        android:id="@+id/iv_refresh"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@id/iv_head"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@id/iv_head"
        android:layout_marginLeft="10dp"
        android:background="@color/colorOrigin"
        android:src="@drawable/me_refresh_icon" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_popup_reminder" />

</RelativeLayout>